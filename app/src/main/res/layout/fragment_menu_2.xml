<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOC"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:textSize="25sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="@font/aref_ruqaa"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="#000000"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginStart="10dp"
       android:layout_marginTop="5dp"
       android:layout_marginEnd="10dp"
       android:orientation="vertical">

       <TextView
           android:id="@+id/avil_pro_text_view"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#000000"
           android:textSize="20sp"
           android:text="Available processors:"
           android:textAllCaps="false" />
       <TextView
           android:id="@+id/architecture_text_view"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Architecture"
           android:layout_marginTop="5dp"
           android:textColor="#000000"
           android:textSize="20sp"
           android:textAllCaps="false" />
       <TextView
           android:id="@+id/gpu_vender_text_view"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="GPU Vender"
           android:layout_marginTop="5dp"
           android:textColor="#000000"
           android:textSize="20sp"
           android:textAllCaps="false" />
       <TextView
           android:id="@+id/gpu_render_text_view"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="GPU Render"
           android:layout_marginTop="5dp"
           android:textColor="#000000"
           android:textSize="20sp"
           android:textAllCaps="false" />
       <TextView
           android:id="@+id/gpu_version_text_view"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="GPU Version"
           android:layout_marginTop="5dp"
           android:textColor="#000000"
           android:textSize="20sp"
           android:textAllCaps="false" />
       <TextView
           android:id="@+id/gpu_extension_text_view"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="GPU Extension"
           android:layout_marginTop="5dp"
           android:textColor="#000000"
           android:textSize="20sp"
           android:textAllCaps="false" />
   </LinearLayout>


</android.support.v7.widget.LinearLayoutCompat>