<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <TextView
            android:id="@+id/model_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model Name"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textAllCaps="false"/>
        <TextView
            android:id="@+id/brand_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand Name"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textAllCaps="false"/>
        <TextView
            android:id="@+id/screen_size_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Screen Size"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textAllCaps="false"/>
        <TextView
            android:id="@+id/screen_reso_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Screen Resolution"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textAllCaps="false"/>
        <TextView
        android:id="@+id/density_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen Density"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textAllCaps="false"/>
        <TextView
            android:id="@+id/total_ram_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total RAM"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textAllCaps="false"/>
        <TextView
            android:id="@+id/avail_ram_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avilable RAM"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textAllCaps="false"/>


    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>